<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordPage" >
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clik"
        android:textStyle="bold"
        android:textColor="@color/orangelight"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_accel_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_accel"
        android:textColor="@color/bluelight" />
    
    <TextView
        android:id="@+id/tv_accel_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greenlight"
        android:layout_below="@+id/tv_accel_result" />

    <TextView
        android:id="@+id/tv_gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_accel_text"
        android:text="@string/gyro"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_gyro_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bluelight"
        android:layout_below="@+id/tv_gyro" />
    
    <TextView android:id="@+id/tv_gyro_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/greenlight"
              android:layout_below="@+id/tv_gyro_result"/>
    
    <TextView
        android:id="@+id/tv_ped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ped"
        android:layout_below="@+id/tv_gyro_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/tv_ped_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ped"
        android:textColor="@color/bluelight" />

    <TextView
        android:id="@+id/tv_accel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_accel_result"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="18dp"
        android:text="@string/acc"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:textColor="@color/orangelight"
        android:onClick="stop"
        android:text="@string/pause" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button2"
        android:layout_alignBottom="@+id/Button2"
        android:layout_toRightOf="@+id/Button2"
        android:textColor="@color/orangelight"
        android:text="@string/stop" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="start"
        android:textColor="@color/orangelight"
        android:text="@string/record" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnStop"
        android:layout_toRightOf="@+id/btnStop"
        android:textColor="@color/orangelight"
        android:text="@string/reset" />

</RelativeLayout>